extends ../layout

block content
	.container
		h1 用户管理列表
		row.
		table.table.table-striped.table-hover
			thead
				tr
					th 用户名
					th 注册时间
					th 操作
			tbody
				each user in userList
					tr
						td #{user.username}
						td #{moment(user.meta.createAt).format('YYYY-MMM-DD HH:MM:SS')}
						td 
							button.btn.btn-danger 删除用户 